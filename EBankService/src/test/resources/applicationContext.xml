<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd "
       default-lazy-init="false">

    <!-- 加载配置文件 -->
    <context:property-placeholder file-encoding="UTF-8"
                                  ignore-unresolvable="true" location="classpath:/application-common.properties"/>
    <context:property-placeholder file-encoding="UTF-8"
                                  ignore-unresolvable="true" location="classpath:/application-test.properties"/>

    <!--配置扫描包-->
    <context:component-scan base-package="com.yada"/>

    <!-- 注解驱动（用于扫描autowired注解） -->
    <context:annotation-config/>

    <!-- 数据访问层JPA的配置-->
    <import resource="classpath:applicationContext-jpa.xml"/>

    <!-- Beans注入 -->
    <import resource="classpath:applicationContext-beans.xml"/>

    <!-- EhCache -->
    <import resource="classpath:/applicationContext-cache.xml"/>

</beans>